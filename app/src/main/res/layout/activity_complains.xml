<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/complain"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aiesecdelhiiit.discoverdelhi.Complains">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan a travel"
        android:id="@+id/textView6"
        android:textSize="25dp"
        android:textColor="#F4A460"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seek for help"
        android:id="@+id/textView77"
        android:textSize="24dp"
        android:textColor="#F4A460"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Any complaints?"
        android:id="@+id/textView79"
        android:textSize="20dp"
        android:textColor="#F4A460"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:clickable="true"
        android:text="Akshay Nagpal"
        android:textColor="#000"
        android:textSize="15dp"
        android:id="@+id/textView7"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vice President | Developement Sector"
        android:textColor="#000"
        android:id="@+id/textView10"
        android:textSize="15dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will receive a response within 24 hours."
        android:id="@+id/textView12"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/textView10" />

    <Button
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Write a mail"
        android:id="@+id/button2"
        android:textSize="15dp"
        android:onClick="mail"
        android:textColor="#F4A460"
        android:background="#99000000"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact:"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/textView5"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
