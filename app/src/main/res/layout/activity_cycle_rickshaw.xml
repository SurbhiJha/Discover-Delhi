<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/cycles"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aiesecdelhiiit.discoverdelhi.Cycle_rickshaw">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cycle rickshaws are small-scale local means of transport and is used for travelling small distances at cheap prices."
        android:id="@+id/textView30"
        android:textSize="22dp"
        android:textColor="#000"
        android:background="#99ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Approximate prices: Rs. 10-50/ according to the distance travelled."
        android:id="@+id/textView310"
        android:textSize="22dp"
        android:textColor="#000"
        android:background="#99ffffff"
        android:layout_marginTop="130dp"
        android:layout_below="@id/textView30"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
