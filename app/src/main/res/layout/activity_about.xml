<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#037ef3"
android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context="com.aiesecdelhiiit.discoverdelhi.About">

    <TextView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:textSize="34dp"
        android:textColor="#fff"
        android:text="AIESEC in Delhi IIT"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="AIESEC in Delhi IIT, a Delhi based LC is situated in the capital city of India whose rich heritage and culture leaves one mesmerized. In Persian, delordili (Delhi) means heart. It means that Delhi belongs to the large-hearted/daring people. It is an amalgamation of rich heritage and post modern culture and offers much more than you can ever imagine."
        android:textColor="#fff"
        android:id="@+id/textView14"
        android:textSize="15dp"
        android:background="#037ef3"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Office Address: A-226, Shivalik Colony, Malviya Nagar, Near Gol Chakkar, New Delhi, Delhi 110017"
        android:id="@+id/textView15"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="130dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:text="Reach office"
        android:textSize="20dp"
        android:background="#fff"
        android:textColor="#037ef3"
        android:onClick="Process"
        android:id="@+id/reach"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Recent awards"
        android:textSize="20dp"
        android:background="#fff"
        android:textColor="#037ef3"
        android:onClick="Process"
        android:layout_marginTop="40dp"
        android:id="@+id/awards"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Our impact"
        android:textSize="20dp"
        android:background="#fff"
        android:textColor="#037ef3"
        android:onClick="Process"
        android:id="@+id/impact"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/awards"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
