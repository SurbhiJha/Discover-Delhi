<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="#FF0000"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aiesecdelhiiit.discoverdelhi.Cathedral_Church">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Cathedral Church of the Redemption in New Delhi, also known as the Viceroy Church, is among the most beautiful and magnificent churches in India. The church is located east of Parliament House and Rashtrapati Bhavan which was used by then British Viceroy. The Cathedral Church of the Redemption India, is a part of the Delhi diocese of the Church of North India (CNI)."
        android:id="@+id/cath"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Take me there"
        android:onClick="Process"
        android:background="#00000000"
        android:textColor="#fff"
        android:textStyle="italic"
        android:textSize="20dp"
        android:id="@+id/church"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
