<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="#817988"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aiesecdelhiiit.discoverdelhi.QutubMinar">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Qutb Minar, at 120 meters, is the tallest brick minaret in the world. Qutub Minar, along with the ancient and medieval monuments surrounding it, form the Qutub Complex, which is a UNESCO World Heritage Site. The tower is located in the Mehrauli area of Delhi, India."
        android:id="@+id/Qutub"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Take me there"
        android:onClick="Process"
        android:background="#00000000"
        android:textSize="20dp"
        android:textColor="#fff"
        android:textStyle="italic"
        android:id="@+id/Qminar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
